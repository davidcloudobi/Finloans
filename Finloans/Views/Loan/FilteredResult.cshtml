                </div>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {


                <div class="col-lg-4 col-md-6">
                <div class="single_service wow fadeInLeft" data-wow-duration="1.2s" data-wow-delay=".5s">
                    <div class="service_icon_wrap text-center">
                        <div class="service_icon ">
                            <img src="~/Content/img/svg_icon/service_1.png" alt="">
                        </div>
                    </div>
                    <div class="info text-center">
                        <h1>@item.Name</h1>
                       
                    </div>
                    <div class="service_content">
                        <ul>
                            <li>Loan Type: @item.TypeOfLoan </li>
                            <li>Rate:  @item.Rate</li>
                           
                        </ul>
                        <div class="apply_btn">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new {@class="boxed-btn3"})
                        </div>
                    </div>
                </div>
            </div>


            }
               



            </div>
    </div>
</div>
